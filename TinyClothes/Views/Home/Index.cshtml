@{
    ViewData["Title"] = "Welcome to Tiny Clothes";
}
@* Old Cards
<div class="row">
    <div class="card class="flex-sm-nowrap"" style="width: 18rem;">
        <img src="~/img/chihuahua-in-red-outfit-downscaled.png"
                class="card-img-top"
                alt="Chihuahua in red outfit" />
        <div class="card-body">
            <h5 class="card-title">Our Products</h5>
            <p class="card-text">We sell tiny clothes for your pets and stuffed animals. For your own safety, please do not apply these clothes to children, especially if they were born in March.</p>
        </div>
    </div>
    <div class="card" style="width: 18rem;">
        <img src="~/img/cute-dogs-vintage-photo.jpg"
                class="card-img-top"
                alt="Our employees" />
        <div class="card-body">
            <h5 class="card-title">Our Workplace</h5>
            <p class="card-text"></p>
        </div>
    </div>
</div>
*@
<div id="carousel" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner .modal-sm">
        <div class="carousel-item active">
            <img src="~/img/chihuahua-in-red-outfit-downscaled.png" class="d-block w-100" alt="Chihuahua in red outfit">
            <div class="card-body d-none d-md-block">
                <h5>Our Products</h5>
                <p>We sell tiny clothes for your pets and stuffed animals. For your own safety, please do not apply these clothes to children, especially if they were born in March.</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/img/cute-dogs-vintage-photo.jpg" class="d-block w-100" alt="Our employees">
            <div class="card-body d-none d-md-block">
                <h5>Our Workplace</h5>
                <p>90% of our employees are made up of cursed children. Being neither animal, nor human, they have no rights.</p>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<p>
    We do not accept returns or give refunds. The consequences of purchasing our wares will be left to you.
</p>